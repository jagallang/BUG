rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // App files for missions (APK, IPA files)
    match /mission_files/{missionId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid in resource.metadata.allowedUsers || 
         request.auth.uid == resource.metadata.ownerId);
    }
    
    // Bug report screenshots
    match /bug_reports/{reportId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == resource.metadata.reportedBy;
    }
    
    // User profile images
    match /profile_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public assets (app icons, etc.)
    match /public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
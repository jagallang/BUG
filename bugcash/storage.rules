rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 미션 스크린샷 업로드 (테스터만 가능)
    match /mission_screenshots/{workflowId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.token.userType == 'tester';
    }
    
    // 기타 파일 (인증된 사용자만)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
